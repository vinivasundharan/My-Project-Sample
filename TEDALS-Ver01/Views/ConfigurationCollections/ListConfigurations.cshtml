@model TEDALS_Ver01.ViewModels.ConfigurationCollection.ConfigAllList
@{
    ViewBag.Title = "View Configurations";
}
<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Configurations", "Index", "ConfigurationCollections")</li>
    <li>View Configuration</li>
</ul>
<h2>View Configuration</h2>
<div class="col-md-2">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("View System Families", "Index", "LsystemFamilies")</li>
        <li>@Html.ActionLink("View all Configuration", "Index", "ConfigurationCollections")</li>
        <li>@Html.ActionLink("View all Systems", "Index", "Lsystems")</li>
    </ul>
</div>

<div class="col-md-10">
    <h4>Family Name: @ViewBag.FamilyName</h4>
    <h4>System name: @ViewBag.LsystemName </h4>
    <h4>Configuration Name : @Model.ConfigurationName </h4>
    <table class="table">
        <tr>
            @foreach (var item in ViewBag.Option)
            {
                <th>@item.OptionName</th>
            }
            @foreach (var item in ViewBag.Independent)
            {
                <th style="background-color:#9898AB">@item.OptionName</th>
            }
            <th></th>
        </tr>
        <tr>
            @foreach (var item in Model.OpOvList)
            {
                
                <td>
                    @foreach (var ov in item.Optionvalue)
                    {
                    if (ov == "No Value")
                    {
                    <p style="color:#EF1F1F"> @ov<br /></p>
                    }
                    else
                    {
                    <p>@ov <br /></p>
                    }
                    }
                </td>
            }
            <td>@Html.ActionLink("Edit", "Edit", "ConfigurationCollections", new { id = Model.ConfigID }, null) | @Html.ActionLink("Delete", "Delete", "ConfigurationCollections", new { id = Model.ConfigID }, null)</td>
        </tr>
    </table>
    <p>
        <hr />
        @Html.ActionLink("Back to List", "Index", "ConfigurationCollections")
    </p>
</div>